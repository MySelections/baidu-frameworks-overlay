<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/panel_content" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="vertical">

	<LinearLayout android:id="@+id/panel_header"
		android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginLeft="6dip"
		android:orientation="vertical">

		<RelativeLayout android:id="@+id/panel_header_top"
			android:layout_height="wrap_content" android:layout_width="match_parent">
			<ImageView android:id="@+id/panel_header_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_centerVertical="true" android:layout_alignParentLeft="true"
				android:src="@drawable/ic_install_prompt_warning" />

			<LinearLayout android:id="@+id/panel_header_text"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_toRightOf="@id/panel_header_icon" android:layout_marginLeft="6dip"
				android:orientation="vertical">
				<TextView android:id="@+id/panel_header_text1"
					android:layout_width="wrap_content" android:layout_height="wrap_content" 
					android:lineSpacingMultiplier="0.96" android:layout_marginRight="12dip" 
					android:maxLines="4" android:scrollbars="vertical" 
					android:textSize="16sp" android:textColor="#E15D5D" />

				<TextView android:id="@+id/panel_header_text2"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="14sp" android:textColor="#E15D5D"  android:layout_marginTop="3dip"/>

			</LinearLayout>
		</RelativeLayout>

		<TextView android:id="@+id/panel_header_bottom"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"  android:textSize="12sp" android:textColor="#7C7C7C" />
	</LinearLayout>


	<LinearLayout android:id="@+id/panel_prompt"
		android:layout_height="58dip" android:layout_width="wrap_content" android:layout_marginLeft="3dip"
		android:orientation="horizontal">
		<CheckBox android:id="@+id/panel_alwaysUse"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:focusable="true" android:clickable="true" />

		<TextView android:id="@+id/panel_text" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="16sp" android:textColor="#7C7C7C"
			android:paddingLeft="5dip" android:text="@string/clearDefaultHintMsg" />
	</LinearLayout>

</LinearLayout>
