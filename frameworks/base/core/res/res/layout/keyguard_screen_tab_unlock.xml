<!-- This is the general lock screen which shows information about the
  state of the device, as well as instructions on how to get past it
  depending on the state of the device.  It is the same for landscape
  and portrait.-->
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip">    
       <TextView
            android:id="@+id/status1"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
	         android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12dip"
            android:drawablePadding="2dip"
            />
         <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="250dip"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
           android:layout_marginRight="10dip"
           android:layout_toRightOf="@id/status1"
	        android:gravity="right"
		    >
	        <TextView
	            android:id="@+id/carrier"
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
	            android:gravity="right"
	            android:drawablePadding="4dip"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="12dip"
	            android:textColor="#FFFFFFFF"
	            />

	        <TextView
	            android:id="@+id/carrierDivider"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:textSize="12dip"
	            android:drawablePadding="2dip"
	            />

	        <TextView
	            android:id="@+id/carrierGemini"
	  	    android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:drawablePadding="4dip"
	            android:singleLine="true"
	            android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
	            android:gravity="right"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="12dip"
	            android:textColor="#FFFFFFFF"
	            />
            </LinearLayout>
    </RelativeLayout>

    <com.android.internal.widget.DigitalClock android:id="@+id/time"
        android:layout_marginTop="20dip"
        android:layout_gravity="center"
        >

        <!-- Because we can't have multi-tone fonts, we render two TextViews, one on
        top of the other. Hence the redundant layout... -->
        <TextView android:id="@+id/timeDisplayBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="none"
            android:textSize="54sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/lockscreen_clock_background"
            />

        <TextView android:id="@+id/timeDisplayForeground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="none"
            android:textSize="54sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/lockscreen_clock_foreground"
            android:layout_alignLeft="@id/timeDisplayBackground"
            android:layout_alignTop="@id/timeDisplayBackground"
            />
        <TextView
            android:id="@+id/am_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/timeDisplayForeground"
            android:layout_alignBaseline="@id/timeDisplayForeground"
            android:singleLine="true"
            android:ellipsize="none"
            android:textSize="16dp"
            android:layout_marginLeft="4dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFFFF"
            android:shadowColor="#4c000000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="3.0"
        />

    </com.android.internal.widget.DigitalClock>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"
            />
            <include android:id="@+id/transport"
                layout="@layout/keyguard_transport_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
     </LinearLayout>

     <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        >       
        <TextView
            android:id="@+id/alarm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"
            android:drawablePadding="4dip"
            />
    </LinearLayout>


    <Space android:layout_gravity="fill" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dip"
        android:layout_height="302dip">

        <com.android.internal.widget.multiwaveview.GlowPadView

             android:id="@+id/unlock_widget"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentBottom="true"
             android:gravity="top"
             android:focusable="true"

             android:targetDrawables="@array/lockscreen_targets_with_camera"
             android:targetDescriptions="@array/lockscreen_target_descriptions_with_camera"
             android:directionDescriptions="@array/lockscreen_direction_descriptions"
             android:handleDrawable="@drawable/ic_lockscreen_handle"
             android:outerRingDrawable="@drawable/ic_lockscreen_outerring"
             android:outerRadius="@dimen/glowpadview_target_placement_radius"
             android:innerRadius="@dimen/glowpadview_inner_radius"
             android:snapMargin="@dimen/glowpadview_snap_margin"
             android:feedbackCount="1"
             android:vibrationDuration="20"
             android:glowRadius="@dimen/glowpadview_glow_radius"
             android:pointDrawable="@drawable/ic_lockscreen_glowdot"
             />
         <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        style="?android:attr/buttonBarStyle"
	        android:gravity="center_horizontal"
	        >

        <Button android:id="@+id/emergencyCallButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="18dip"
            android:text="@string/lockscreen_emergency_call"
            android:drawableLeft="@drawable/ic_lockscreen_emergency_call"
            android:drawablePadding="6dip"
            android:visibility="gone"
        />

    	</LinearLayout>
    </RelativeLayout>

</GridLayout>

